                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required></textarea>
                            </div>
                    
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required></textarea>
                            </div>
                    
                            <button class="btn btn-success col-12">Login</button>
                    
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit</h1>
        <div class="col-6 offset-3">

            <form action="/notes/<%=tempNote._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="note[title]" value="<%=tempNote.title%>" required>
                    <div id="validationServerUsernameFeedback" class="invalid-feedback">
                        Please include a title.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" rows="3" type="text" id="description"
                        name="note[description]"><%=tempNote.description%></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="date">Date</label>
                    <input class="form-control" rows="3" type="datetime-local" value="<%=tempNote.dueDate%>" id="date"
                        name="note[dueDate]"></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
            </form>


            <a href="/notes/<%=tempNote._id%>">Back To Tasks</a>
        </div>
    </div>
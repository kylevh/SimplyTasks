<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1>All Tasks</h1>
        <!-- //<a href="/notes/new">Add Task</a> -->
    </div>

        <% for (let note of tempNotes.reverse()) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-10">
                        <h3 class="card-title m-2">
                            <%= note.title %>
                                </h5>
                                <p class="card-text m-2">
                                    <%= note.description %>
                                </p>
                                <!-- <p class="card-text m-2">
                        <small class="text-muted "><%= note.date %></small>
                    </p> -->
                                <a class="btn btn-primary m-2" href="notes/<%=note._id%>">View</a>
                    </div>
                </div>
            </div>
            <% } %>